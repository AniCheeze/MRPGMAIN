<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="300"
        ResizeMode="NoResize">
    <Grid>
        <Grid.Effect>
            <DropShadowEffect/>
        </Grid.Effect>
        <TextBox Name ="UserName" HorizontalAlignment="Center" Margin="0,181,0,0" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" Width="150" Height="30" FontSize="20"/>
        <TextBox Name ="Password"  HorizontalAlignment="Center" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Width="150" Height="30" FontSize="20" Margin="0,217,0,0"/>
        <Button Content="Login" HorizontalAlignment="Center" VerticalAlignment="Top" Height="50" Width="155" Margin="0,279,0,0" FontSize="18" Click="Button_Click" />
        <Button Content="Register" HorizontalAlignment="Center" VerticalAlignment="Top" Height="50" Width="155" Margin="0,351,0,0" FontSize="18" Click="Button_Click_1" />
        <Image Source="/MainIcon.png" HorizontalAlignment="Left" Height="150" Margin="72,10,0,0" VerticalAlignment="Top" Width="150" Stretch="Fill"/>
    </Grid>
</Window>
